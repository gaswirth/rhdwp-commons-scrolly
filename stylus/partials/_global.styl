/* ==========================================================================
	Global Stylus Variables
   ========================================================================== */

// Variables
$blue = #4465a3
$bluer = #132f4d
$pink = #bf4d6c
$orange = #f89d68
$green = #93a75f
$rust = #c94f37
$red = #ae2223
$gray = #9ea4b1
$grayer = #7e838d

$nav-ht = 5rem

$updir = '//edgeofthemat.com/wp-content/uploads'

$off-white = #e8e8e8

$ff_body = 'Lato', sans-serif


// Functions

-unselectable()
	-webkit-user-select: none; /* Chrome/Safari */
	-moz-user-select: none; /* Firefox */
	-ms-user-select: none; /* IE10+ */
	-o-user-select: none;
	user-select: none;


-invisible()
	visibility hidden
	position absolute


-visible()
	visibility visible
	position initial


-flexbox()
	text-align justify

	&:after
		width 100%
		display inline-block
		content ''

-flexitem()
	display inline-block


-wrapper( $topMargin = false, $bottomMargin = false, $customWidth = false, $maxWidth = null )
	if $customWidth == false
		$w = 85%
	else
		$w = $customWidth

	if $maxWidth == null
		$maxWidth = 64rem

	if $topMargin == false
		$topMargin = 0
	if $bottomMargin == false
		$bottomMargin = 0

	width $w
	max-width $maxWidth
	position relative
	margin $topMargin auto $bottomMargin auto


-unwrapper()
	width 100%
	max-width none
	margin initial


-delist()
	padding-left 0
	list-style none


-clearfix()
	@extends .clearfix


-body-shadow( $yPos )
	box-shadow 0em $yPos 0.45em 0em rgba(0,0,0,0.5)


-opacity( $n )
	-moz-opacity $n
	-webkit-opacity $n
	opacity $n


-transform( $n )
	-webkit-transform $n
	transform $n


-transition( $n )
	-webkit-transition $n
	transition $n


-placeholder-props( $famVal, $color = null, $opacity = null )
	&::-webkit-input-placeholder
		font-family $famVal
		if $color !=null
			color $color

		if $opacity != null
			-opacity( $opacity )

	&:-moz-placeholder /* Firefox 18- */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&::-moz-placeholder  /* Firefox 19+ */
		font-family $famVal
		color $color
		if $opacity != null
			-opacity( $opacity )

	&:-ms-input-placeholder
		font-family $famVal
		color $color
		if $opacity != null
			opacity( $opacity )


