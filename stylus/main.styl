@require 'partials/_global.styl';
@require 'partials/_hamburger.styl';
@require 'partials/_fonts.styl';
@require 'partials/_helpers.styl';
@require 'partials/_galleries.styl';
@require 'partials/_overrides.styl';

/* ==========================================================================
Main Styles
  ========================================================================== */
html
	margin: 0;
	width: 100%;
	background: white;
	color: black;
	text-shadow: 0 0 1px transparent;
	font-size: 16px;
	font-family: $ff-body;

body
	@extends html;

a
	outline: 0 !important;
	color: $color2;
	text-decoration: none;
	transition: color .25s;

	&:hover, &:active
		color: $color3;

h1, h2, h3, h4, h5, h6
	font-weight: 400;

#page
	overflow: hidden;
	width: 100%;

#main
	box-sizing: border-box;

#primary
	position: relative;
	box-sizing: border-box;
	margin: 0 auto;
	width: 100%;

#colophon
	padding: 2em 0 1em;
	width: 100%;
	color: black;

	.site-info
		margin: 0;
		text-align: center;
		font-weight: 300;
		font-size: .9em;
		line-height: 1.7;

		p
			display: inline-block;
			padding: 2em 5em 0;
			border-top: 1px solid black;
			font-size: .9em;

		a
			text-decoration: none;
			transition: color .2s;

			&:link, &:visited
				color: inherit;

			&:hover, &:active
				color: $color2;

	#rhd-logo-footer
		position: relative;
		bottom: .15em;
		margin: 0 .05em;
		width: 1.35em;
		height: 1.35em;

.section-title
	margin: 1em auto 1rem;
	text-align: center;
	font-size: 2.5em;

#content
	section
		position: relative;
		width: 100%;

	.section-content
		-wrapper();
		padding: 1em 0;
		@extends .clearfix;

	iframe
		display: block;
		margin: 0 auto;
		max-width: 100%;

#top
	position: relative;

	#masthead
		position: relative;
		margin: 0;
		width: 100%;
		height: 100vh;
		// background-image url($updir + '/2020/03/Nick_G_261_Web.jpg')
		background-image: url($updir + '/2021/07/Nicky_MYP-1-1.jpg');
		background-size: cover;
		text-align: center;

		@media (max-width: 420px)
			background-position: -65% center;

		@media (min-width: 600px)
			background-position: center bottom;

		.header-content
			position: absolute;
			top: .75em;
			padding: 1em;
			width: 100%;
			-border-radius(3px);
			z-index: 2;
			color: white;

			#site-title
				display: inline-block;
				margin: 0 auto;
				width: 100%;
				font-size: 2.2em;
				line-height: 1;

			#site-navigation-container
				margin: 0 auto;
				width: 94%;
				text-align: center;

				#site-navigation
					display: flex;
					justify-content: space-between;
					margin: .75em 0;
					padding-left: 0;
					width: 100%;
					list-style: none;
					line-height: 1;
					line-height: initial;

					li
						text-transform: uppercase;
						font-size: 1.2em;

						a
							text-decoration: none;
							transition: color .2s;

							&:link, &:visited
								color: inherit;

							&:hover, &:active
								color: $color2;

	#bio
		padding: 1em 0;

#news
	padding: 1em 0 2em;
	background: white;

	.section-content
		.news-entries
			width: 100%;

			.news-entry
				z-index: 100;
				display: block;
				margin: 0 auto;
				padding: 0 1.5em;
				width: 95%;
				vertical-align: top;

				img
					display: block;
					margin: 0 auto .25em;
					max-width: 300px;
					width: 100%;
					-border-radius(2px);

				.news-content
					text-align: center;
					white-space: normal;

	.news-scroller
		position: absolute;
		top: 50%;
		display: block;
		width: 100%;
		-transform(translateY(-50%));

		a
			position: absolute;
			z-index: 1;
			display: block;
			width: 4em;
			height: 5em;
			background-color: $color2;
			background-size: 40% 90%;
			background-repeat: no-repeat;
			transition: all .3s ease .1s;

			&#prev
				left: -2em;
				background-image: url('../img/left.png');
				background-position: 2.1em center;

			&#next
				right: -2em;
				background-image: url('../img/right.png');
				background-position: .4em center;

			&.disabled
				display: none;

#media
	height: auto;

	#ytv
		-wrapper(1em, 1em);
		max-width: 100%;
		height: 50vh;

		&.ytv-mobile
			margin-bottom: 1em;

			img
				width: 100%;
				height: auto;

			iframe
				width: 100%;
				height: 100%;

#resume
	ul
		-wrapper();
		padding-left: 0;
		list-style: none;

		li
			margin-bottom: 1em;
			width: 100%;
			border-radius: .125rem;

			&:last-child
				margin-bottom: 0;

			img
				width: 100%;
				height: auto;

	.resume-container
		-wrapper(0, 0, 95%);

		.headshots
			display: flex;
			flex-wrap: nowrap;
			
			a
				margin: 12px;
				display: block;

			img
				width: 100%;
				height: auto;

		a
			display: block;

		img
			margin: .5em auto 0;
			width: 100%;
			height: auto;

	.section-title
		margin-top: .25em;

#contact
	.section-content
		margin-top: 1em;

	#contact-form, #contact-info
		margin: 0 auto;
		width: 90%;

	#contact-form
		margin: 2em auto 1em;
		-clearfix();

		input, textarea
			padding-right: .25em;
			padding-left: .25em;
			max-width: none;
			font-size: 1em;
			-border-radius(.1em);
			outline: none;
			border: 2px solid black;
			font-family: $ff-input;
			transition: .2s all;

			&:focus
				border: 2px solid $color2;

			&[type='email'], &[type='text']
				width: 100%;
				height: 2em;

			&[type='submit']
				display: block;
				padding: .5em .2em .4em;
				width: 100%;
				border: none;
				background-color: $color2;
				color: white;
				text-align: center;
				font-weight: 300;
				font-size: 1.1em;
				font-family: $ff-body;
				cursor: pointer;
				transition: background-color .25s;

				&:hover, &:active
					background-color: $color3;

		textarea
			padding: .25em;
			width: 100%;

	#contact-info
		text-align: center;

		img
			max-width: 100%;
			height: auto;

	.ninja-forms-required-items
		display: none;

#social
	-wrapper(0, 0, 60%);
	-flexbox();

	.social-item
		width: 42%;
		-flexitem();

		img
			width: 100%;

.full-bg
	width: 100%;
	height: 100vh;
	background-position: center center;
	background-size: cover;

	.full-bg-caption
		position: absolute;
		bottom: 0;
		padding: 1em 0;
		width: 100%;
		background: rgba(255, 255, 255, .75);
		color: black;
		text-align: center;
		font-size: 2em;

		a
			color: inherit;
			text-decoration: none;

			&:hover, &:active
				color: $color2;

		h1, h2, h3, p
			margin: 0;

#full-bg-1
	background-image: url($updir + '/2016/01/NICK_GASWIRTH_276.jpg');

#full-bg-2
	background-image: url($updir + '/2016/01/nick-1.jpg');
	// background-image url($updir + '/2016/01/NICK_GASWIRTH_129.jpg')

#full-bg-3
	background-image: url($updir + '/2016/01/NICK_GASWIRTH_156.jpg');
	// background-image url($updir + '/2016/01/NICK_GASWIRTH_235.jpg')

.hide-on-fallback
	position: absolute;
	left: -100%;
	display: block;
	overflow: hidden;
	width: 0;
	height: 0;

/* ==========================================================================
Media Queries
  ========================================================================== */
@media screen and (min-width: 40em)
	#top
		#masthead
			.header-content
				padding: 1em 5%;
				width: 100%;
				background: rgba(0, 0, 0, .25);
				text-align: center;

				#site-title
					font-size: 3.7em;

		#bio
			position: absolute;
			bottom: 0;
			left: 3%;
			padding: 1em;
			width: 45%;
			text-align: justify;
			-border-radius(3px);

	#news
		.section-content
			position: relative;
			max-width: 64rem;

			.news-entries
				.news-entry
					padding: 2em;
					width: auto;

	#resume
		ul
			-wrapper(0, 0, 70%);
			-flexbox();
			padding-left: 0;
			list-style: none;

			li
				width: 34%;
				-flexitem();

				img
					width: 100%;
					height: auto;

		.resume-container
			width: 50%; // Adjusts wrapper

			a
				display: block;

			img
				width: 46%;

	#contact
		.section-content
			margin: 2em auto;
			@extends .clearfix;

			#contact-form
				float: left;
				margin-bottom: 0;
				width: 60%;

				input
					&[type='submit']
						width: 6.25rem;

			#contact-info
				float: right;
				margin-top: 1em;
				width: 30%;

	.full-bg
		figcaption
			font-size: 2em;

	#full-bg-2
		background-position: center;

	#colophon
		.site-info
			font-size: 1em;
