@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	background white
	color black
	font-family $ff-body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	color $color2

	&:link
	&:visited
		text-decoration none

	&:hover
	&:active
	&:focus
		text-decoration underline


h1
h2
h3
h4
h5
h6
	font-weight 400


#main
	box-sizing border-box


#primary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


#colophon
	width 100%
	background $color2
	padding 2em 0
	margin-bottom 4em
	color white

	.site-info
		margin 0
		padding 1em 0
		text-align center
		line-height 1.7
		font-size 1.1em
		font-weight 300

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


.section-title
	font-size 2em
	text-align center;
	margin 0 auto 1em auto


#content
	section
		width 100%
		position relative

	.section-content
		-wrapper()
		padding 3em 0
		@extends .clearfix

	iframe
		max-width 100%
		display block

		&[src*="youtube"]
		&[src*="vimeo"]
			margin 1em auto


#top
	position relative

	#masthead
		width 100%
		height 100vh
		background-image url('//dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/home-temp.jpg')
		background-size cover
		background-position top right
		text-align center
		margin 0
		color white
		position relative

		.header-content
			width 100%
			padding 1em
			position absolute
			bottom 0
			-border-radius(3px)

			#front-page-title
				width 100%
				margin 0 auto
				font-size 2.5em
				display inline-block
				font-variant small-caps
				line-height 1

			#site-navigation-container
				width 99%
				margin 0 auto
				text-align center

			#site-navigation
				list-style none
				margin 0
				-flexbox()

				li
					-flexitem()
					text-transform uppercase

					a
						text-decoration none
						transition color 0.2s

						&:link
						&:visited
							color inherit

						&:hover
						&:active
							color $color2


					.sub-menu
						position absolute
						padding-left 0
						line-height 1.7
						margin-top 0.2em
						z-index 999 !important

						li
							display block
							margin 0

	#bio
		padding 1em 0


#news
	min-height 100vh
	background white
	padding 1em 0 2em 0

	.news-content
		width 100%
		max-width 75rem

	.news-list
		width 85%
		max-width 100%
		margin 2em auto
		list-style none
		padding-left 0

		.news-item
			display block

	.screen-reader-text
		visibility hidden
		height 0
		margin 0

	#loader
		width 100%
		text-align center
		position absolute
		bottom 4em

		img
			width 10em
			height auto
			display block
			margin 0 auto

	.pagination
		width 100%

		.nav-links
			text-align center

			a
				font-size 1.5rem

			.page-numbers
				transition all 0.2s
				display none

				&.next
					padding-left 1em
					display inline-block

				&.prev
					padding-right 1em
					display inline-block


	li
		width 75%
		max-width 300px
		margin 0.75em auto
		display block
		text-align center

		img
			width 100%
			height auto
			margin 0 auto 0.25em auto
			display block
			-border-radius 3px


#resume
	ul
		-flexbox()
		list-style none
		padding-left 0

		li
			width 49%
			-flexitem()

			img
				width 100%
				height auto


#contact
	#contact-form
	#contact-info
		width 90%
		margin 0 auto

	#contact-form
		margin 1em auto 3em

		input
		textarea
			font-size 1em
			padding-left 0.25em
			padding-right 0.25em
			-border-radius(0.1em)
			border 2px solid $color3
			transition 0.2s all

			&:focus
				border 2px solid $color2

			&[type="email"]
			&[type="text"]
				width 100%
				height 2em

			&[type="submit"]
				width 100%
				background gray
				color black
				border none
				padding 0.5em 0.2em 0.4em 0.2em
				font-size 1.1em
				text-align center
				font-weight 300
				margin 0 auto
				display block
				cursor pointer
				transition all 0.2s

				&:hover
				&:active
					background black
					color white

		textarea
			width 100%
			padding 0.25em

	#contact-info
		text-align center

		img
			max-width 100%
			margin-bottom 1em


#social
	width 100%
	-flexbox()

	.social-item
		width 26%
		-flexitem()

		img
			width 100%


.full-bg
	width 100%
	height 100vh
	background-size cover
	background-position center top
	background-repeat no-repeat

	.full-bg-caption
		width 100%
		background rgba( 255, 255, 255, 0.75 )
		padding 1em 0
		font-size 2em
		color black
		text-align center
		position absolute
		bottom 0

		.download-res
			color (@color)


#full-bg-1
	background-image url('http://dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/bio.jpg')

#full-bg-2
	background-image url('http://dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/resume.jpg')

#full-bg-3
	background-image url('http://dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/photo1.jpg')

#full-bg-4
	background-image url('http://dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/video1.jpg')

#full-bg-5
	background-image url('http://dev.roundhouse-designs.com/rachelwomble/wp-content/uploads/2015/09/contact.jpg')


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#top
		#masthead
			.header-content
				width 40%
				min-width 27em
				height 100%
				padding-top 1em
				padding-bottom 3em
				position absolute
				top 0
				left 3%
				-transform(none)

				#front-page-title
					font-size 3.7em

		#bio
			width 45%
			position absolute
			bottom 0
			left 3%
			padding 1em
			text-align justify
			-border-radius(3px)

	#news
		min-height 0

		.news-list
			min-height 31em
			text-align justify

			&:after
				width 100%
				display inline-block
				content ""

			.news-item
				width 30%
				display inline-block
				vertical-align top

		.pagination
			position absolute
			top 50%
			--transform(translateY(-50%))

			.nav-links
				.page-numbers
					width 5.5rem
					height 5.5rem
					padding 0.8em
					font-size 3.5em
					position absolute
					text-decoration none
					color blue
					top 50%
					--transform(translateY(-50%))
					font-size 5em

					&:hover
					&:active
					&:focus
						padding 1em

					&.next
						right 0
						margin-right 0.25%
						display inline-block

						.pagination-button
							background-image url(../img/right.png)
							background-position 0.25em center

					&.prev
						left -4em
						margin-left 0.25%
						display inline-block

						.pagination-button
							background-image url(../img/left.png)
							background-position 3.25em center

					.pagination-button
						width 4em
						height (@height)
						background-color (@color)
						background-repeat no-repeat
						background-size auto 50%
						-border-radius(50em)


	#contact
		.section-content
			margin 2em auto

			@extends .clearfix

			#contact-form
				width 60%
				float left

				input
					&[type="submit"]
						width 6.25rem

			#contact-info
				width 30%
				float right
				margin-top 1em


	.full-bg
		figcaption
			font-size 2em


/* ==========================================================================
	EXTRAS
   ========================================================================== */

.current-page
	visibility hidden
	position absolute
	bottom 0
	right 0
