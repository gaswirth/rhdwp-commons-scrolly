@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_fonts.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	background white
	color black
	font-family $ff_body


body
	@extends html
	min-height 100%
	position relative


a
	outline 0 !important
	color $color1
	text-decoration none
	transition color 0.25s

	&:hover
	&:active
		color $color2


h1
h2
h3
h4
h5
h6
	font-weight 400


#page
	width 100%
	overflow hidden


#main
	box-sizing border-box


#primary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


#colophon
	width 100%
	color black

	.site-info
		margin 0
		text-align center
		line-height 1.4
		font-weight 300
		font-size 0.9em

		p
			display inline-block
			padding 1em 5em 0 5em
			border-top 1px solid black
			margin 0

		a
			text-decoration none
			transition color 0.2s

			&:link
			&:visited
				color inherit

			&:hover
			&:active
				color $color1

		#rhd-logo-footer
			width 1.35em
			height 1.35em
			margin 0 0.05em
			position relative
			bottom 0.15em


#content
	height 100%

	section
		width 100%
		height 100%
		position relative
		border-top 2px solid $color1
		border-bottom 2px solid $color1

	.section-title
		font-size 2em
		text-align center;
		margin 0 auto 1em auto
		font-family $ff_nav

	.section-content
		-wrapper()
		padding 2em 0
		@extends .clearfix

	iframe
		max-width 100%
		display block


#masthead
	width 100%
	height 100vh
	text-align center
	margin 0
	position relative
	background-image url($updir + '/2016/01/home.jpg')
	background-size cover
	background-position center
	background-attachment fixed


#navbar
	width 100%
	height 4rem
	position fixed
	transform translate3d(0,0,0)
	background-color rgba(255, 255, 255, 0.7)
	top 0
	-border-radius(3px)
	z-index 1000

	.navbar-inner
		width 100%
		height 100%

	#site-title
		width 100%
		margin 0
		font-size 2.2em
		display inline-block
		position absolute
		top 50%
		left 0.5rem
		-transform(translateY(-50%))
		line-height 1
		text-align left
		font-family $ff_headline

		a
			color inherit
			text-decoration none

	#hamburger
		width 4rem
		height 4rem
		position absolute
		right 0
		top 0
		background-color $color1

		&.is-active
			background-color $color2


#site-navigation-container
	display none

	#site-navigation
		list-style none
		margin 0
		padding-left 0
		-flexbox()
		line-height initial

		li
			-flexitem()
			font-size 1.2em
			font-family $ff_nav

			a
				text-decoration none
				transition color 0.2s

				&:link
				&:visited
					color inherit

				&:hover
				&:active
					color $color2


#site-navigation-sb-container
	margin-top 6em

	#site-navigation-sb
		font-size 1.7em
		font-family $ff_nav
		padding-left 0
		text-align center
		line-height 1.6


.section-thumb
	width 100%
	height 80vh
	background-position center top
	background-size 100%
	background-repeat no-repeat
	border-bottom 2px solid #acc3fe

	img
		width 100%
		height auto


#news
	height auto !important
	padding 1em 0 2em 0
	border-top none !important

	.section-title
		margin 1em 0 0 0

	.section-content
		padding-top 1em

		.news-entries
			width 100%

			.news-entry
				width 95%
				margin 0 auto
				padding 0 1.5em
				display block
				vertical-align top
				z-index 100

				img
					width 100%
					max-width 300px
					margin 0 auto 0.25em auto
					display block
					-border-radius(2px)

				.news-content
					white-space normal
					text-align center

	.news-scroller
		width 100%
		display block
		position absolute
		top 50%
		-transform(translateY(-50%))

		a
			width 4em
			height 5em
			position absolute
			display block
			background-color $color1
			background-size 40% 90%
			background-repeat no-repeat
			transition all 0.3s ease 0.1s
			z-index 1

			&#prev
				left -2em
				background-image url('../img/left.png')
				background-position 2.1em center

			&#next
				right -2em
				background-image url('../img/right.png')
				background-position 0.4em center

			&.disabled
				display none

#media
	height auto

	#ytv
		-wrapper(1em, 1em)
		height 50vh
		max-width 100%

		&.ytv-mobile
			margin-bottom 1em

			img
				width 100%
				height auto

			iframe
				width 100%
				height 100%


#resume
	ul
		-wrapper()
		list-style none
		padding-left 0

		li
			width 100%
			margin-bottom 1em
			border-radius .125rem

			&:last-child
				margin-bottom 0

			img
				width 100%
				height auto

	.resume-container
		-wrapper( 0, 0, 95% )
		-clearfix()

		a
			display block

		img
			width 100%
			margin 0.5em auto 0
			height auto

	.section-title
		margin-top 0.25em


#contact
	.social
		text-align center
		margin-top 1em


#contact-form
	border-bottom-width 4px !important
	-clearfix()

	input
	textarea
		max-width none
		font-size 1em
		padding-left 0.25em
		padding-right 0.25em
		-border-radius(0.1em)
		border 2px solid black
		font-family $ff_body
		transition 0.2s all
		outline none

		&:focus
			border 2px solid $color1

		&[type="email"]
		&[type="text"]
			width 100%
			height 2em

		&[type="submit"]
			width 100%
			background-color $color1
			color white
			border none
			padding 0.5em 0.2em 0.4em 0.2em
			font-size 1.1em
			text-align center
			font-weight 300
			font-family $ff_body
			display block
			cursor pointer
			transition background-color 0.25s

			&:hover
			&:active
				background-color $color2

		textarea
			width 100%
			padding 0.25em

	.ninja-forms-required-items
	.ninja-forms-req-symbol
		display none


#rotate-device
	width 100vw
	height 100vh
	background-color rgba(0, 0, 0, .8)
	display block
	position fixed
	top 0
	z-index 99999
	display none

	.rotate-content
		color white
		position absolute
		top 50%
		left 50%
		-transform(translate(-50%, -50%))

		p
			text-align center
			font-size 1.4em

		img
			width 40%
			height auto
			display block
			margin 0 auto


/* ==========================================================================
	Soliloquy
   ========================================================================== */

.soliloquy-container
	max-height none !important
	position relative !important

	.soliloquy-caption
		position relative !important;
		margin-top 1em


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 56em)
	#navbar
		height 6em

		.navbar-inner
			-wrapper(0, 0, 95%)

		#hamburger
			display none

		#site-title
			font-size 3.5em

		#site-navigation-container
			width 61%
			display block
			position absolute
			right 0
			top 40%

	#content
		section
			&.thumb-left
			&.thumb-right
				overflow hidden

				&:after
					display block
					position absolute
					height 100%
					content ""

				.section-thumb
					width 37%
					background-size cover
					border-bottom none

					img
						-invisible()

				.section-content
					width 60%
					max-width none
					margin 0
					padding 0 2em
					margin-top 0

			&.thumb-left
				.section-thumb
					float left

				.section-content
					float right

			&.thumb-right
				.section-thumb
					float right

				.section-content
					float left


	#news
		.section-content
			position relative
			max-width 70rem

			.news-entries
				.news-entry
					width auto
					padding 2em


	#resume
		ul
			-wrapper(0,0,70%)
			-flexbox()
			list-style none
			padding-left 0

			li
				width 34%
				-flexitem()

				img
					width 100%
					height auto

		.resume-container
			width 50% // Adjusts wrapper

			a
				display block

			img
				width 46%


	#contact
		.section-content
			-wrapper(0, 0, 75%)
			-clearfix()

			.agent-info
				width 40%
				float left

			.social
				width 40%
				float right
				position relative
				top 6em
				margin-top 0


	#audio
		.section-content
			position absolute
			top 50%
			-transform(translateY(-50%))

		.wp-audio-shortcode
			width 50% !important
			min-width 300px
			display block
			margin 0 auto


	#teaching
		.section-content
			position absolute
			top 50%
			right 0
			-transform(translateY(-50%))


	#contact-form
		.contact-form
			width 60%
			margin 3em auto 1em

			input
				&[type="submit"]
					width 6.25rem


	#colophon
		.site-info
			font-size 1em
			line-height 1.7

			p
				border-top none