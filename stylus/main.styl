@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	background white
	color black
	font-family $ff-body


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important
	color $color2

	&:link
	&:visited
		text-decoration none

	&:hover
	&:active
	&:focus
		text-decoration underline


h1
h2
h3
h4
h5
h6
	font-weight 400


#main
	box-sizing border-box


#primary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


#colophon
	width 100%
	background $color2
	padding 2em 0
	margin-bottom 4em

	.site-info
		margin 0
		padding 1em 0
		text-align center
		line-height 1.7
		font-size 1.1em
		font-weight 300

		a
			color inherit

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


.section-title
	font-size 2em
	text-align center;
	margin 0 auto 1em auto


#content
	section
		width 100%
		position relative

	.section-content
		-wrapper()
		padding 1em 0
		@extends .clearfix

	iframe
		max-width 100%
		display block

		&[src*="youtube"]
		&[src*="vimeo"]
			margin 1em auto


#top
	position relative

	#masthead
		width 100%
		height 100vh
		background-image url('//something')
		background-size cover
		background-position center
		text-align center
		margin 0
		position relative

		.header-content
			width 100%
			padding 1em
			position absolute
			bottom 0
			-border-radius(3px)

			#site-title
				width 100%
				margin 0 auto
				font-size 2.5em
				display inline-block
				font-variant small-caps
				line-height 1

			#site-navigation-container
				width 94%
				margin 0 auto
				text-align center

				#site-navigation
					list-style none
					margin 0
					padding-left 0
					line-height 2

					li
						font-size 1.2em
						text-transform uppercase

						a
							text-decoration none
							transition color 0.2s

							&:link
							&:visited
								color inherit

							&:hover
							&:active
								color $color2


						.sub-menu
							position absolute
							padding-left 0
							line-height 1.7
							margin-top 0.2em
							z-index 999 !important

							li
								display block
								margin 0

	#bio
		padding 1em 0


#news
	background white
	padding 1em 0 2em 0

	.section-content
		.news-entries
			width 100%

			.news-entry
				width auto
				padding 0 1em
				display block
				vertical-align top

				img
					width 100%
					margin 0 auto 0.25em auto
					display block
					-border-radius(2px)

				.news-content
					white-space normal
					text-align center

	.news-scroller
		width 100%
		display block
		position absolute
		top 50%
		-transform(translateY(-50%))

		a
			position absolute
			font-size 5em

			&#prev
				left 0

			&#next
				right 0

			&.disabled
				display none

#resume
	ul
		-wrapper()
		list-style none
		padding-left 0

		li
			width 100%
			margin-bottom 1em
			border-radius .125rem

			&:last-child
				margin-bottom 0

			img
				width 100%
				height auto


#contact
	#contact-form
	#contact-info
		width 90%
		margin 0 auto

	#contact-form
		margin 1em auto 3em

		input
		textarea
			font-size 1em
			padding-left 0.25em
			padding-right 0.25em
			-border-radius(0.1em)
			border 2px solid $color4
			transition 0.2s all
			font-family $ff-body

			&:focus
				border 2px solid $color2

			&[type="email"]
			&[type="text"]
				width 100%
				height 2em

			&[type="submit"]
				width 100%
				background $color2
				color white
				border none
				padding 0.5em 0.2em 0.4em 0.2em
				font-size 1.1em
				text-align center
				font-weight 300
				display block
				cursor pointer
				transition all 0.2s

				&:hover
				&:active
					background $color3

		textarea
			width 100%
			padding 0.25em

	#contact-info
		text-align center

		img
			max-width 100%
			margin-bottom 1em


#social
	width 100%
	-flexbox()

	.social-item
		width 26%
		-flexitem()

		img
			width 100%


.full-bg
	width 100%
	height 100vh
	background-size cover
	background-position center top
	background-repeat no-repeat

	.full-bg-caption
		width 100%
		background rgba( 255, 255, 255, 0.75 )
		padding 1em 0
		font-size 2em
		color black
		text-align center
		position absolute
		bottom 0

		.download-res
			color (@color)


#full-bg-1
	background-image url('//soemthing')

#full-bg-2
	background-image url('//something')
	background-position -210px top


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#content
		.section-content
			padding 3em 0

	#top
		#masthead
			.header-content
				width 40%
				min-width 30rem
				height 100%
				padding-top 1em
				padding-bottom 3em
				position absolute
				top 0
				left 3%
				-transform(none)

				#site-title
					font-size 3.7em

				#site-navigation-container
					#site-navigation
						-flexbox()
						line-height initial

						li
							-flexitem()

		#bio
			width 45%
			position absolute
			bottom 0
			left 3%
			padding 1em
			text-align justify
			-border-radius(3px)

	#news
		.section-content
			position relative
			max-width 58rem


	#resume
		ul
			-wrapper(0,0,70%)
			-flexbox()
			list-style none
			padding-left 0

			li
				width 34%
				-flexitem()

				img
					width 100%
					height auto


	#contact
		.section-content
			margin 2em auto

			@extends .clearfix

			#contact-form
				width 60%
				float left

				input
					&[type="submit"]
						width 6.25rem

			#contact-info
				width 30%
				float right
				margin-top 1em


	.full-bg
		figcaption
			font-size 2em


	#full-bg-2
		background-position center
