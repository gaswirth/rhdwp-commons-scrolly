@require "partials/_global.styl"
@require "partials/_hamburger.styl"
@require "partials/_helpers.styl"
@require "partials/_galleries.styl"
@require "partials/_overrides.styl"

/* ==========================================================================
	Main Styles
   ========================================================================== */

html
	width 100%
	text-shadow 0 0 1px transparent
	font-size 16px
	margin 0
	background white


body
	@extends html

	&.admin-bar
		#wpadminbar
			position fixed
			top 0


a
	outline 0 !important

	&:link
	&:visited
		text-decoration none

	&:hover
	&:active
	&:focus
		text-decoration underline


#main
	box-sizing border-box


#primary
	width 100%
	margin 0 auto
	position relative
	box-sizing border-box


#colophon
	width 100%
	background #888
	padding 2em 0
	margin-bottom 4em

	.site-info
		margin 0
		padding 1em 0
		text-align center
		line-height 1.7
		font-size 1.1em
		font-weight 300

		a
			color inherit
			text-decoration none

	#rhd-logo-footer
		width 1.35em
		height 1.35em
		margin 0 0.05em
		position relative
		bottom 0.25em


.section-title
	font-size 2em
	text-align center;
	margin 0 auto 1em auto


#content
	section
		width 100%
		position relative

		> .section-content
			wrapper()
			padding 1em 0
			@extends .clearfix

	iframe
		max-width 100%
		display block

		&[src*="youtube"]
		&[src*="vimeo"]
			margin 1em auto


#top
	position relative
	color white

	#masthead
		width 100%
		height 100vh
		background-size cover
		background-position top right
		text-align center
		margin 0
		color white
		position relative

		.header-content
			width 100%
			padding 1em
			position absolute
			bottom 0
			border-radius(3px)

			#front-page-title
				width 100%
				margin 0 auto
				font-size 2.5em
				display inline-block

			#site-navigation-container
				width 95%
				margin 0 auto
				text-align center

			#site-navigation
				list-style none
				padding-left 0
				margin 0
				@extends .flexbox

				li
					@extends .flexitem

					a
						text-decoration none
						-webkit-transition color 0.2s
						transition color 0.2s

						&:link
						&:visited
							color inherit


					.sub-menu
						position absolute
						padding-left 0
						line-height 1.7
						margin-top 0.2em
						z-index 999 !important

						li
							display block
							margin 0

	#bio
		padding 1em 0


#news
	background white
	padding 1em 0 2em 0

	.news-list
		wrapper(2em)
		list-style none
		padding-left 0

		.news-item
			display block

	.pagination
		width 100%

	.screen-reader-text
		visibility hidden
		height 0
		margin 0

	#loader
		width 100%
		text-align center
		position absolute
		bottom 4em

		img
			width 10em
			height auto
			display block
			margin 0 auto

	.nav-links
		text-align center

		.page-numbers
			display none
			position relative
			font-size 3.5em
			text-decoration none
			-transition(all 0.2s)
			color inherit

			&:hover
			&:active
			&:focus
				color red

			&.next
				right 0
				margin-right 1%
				display inline-block

			&.prev
				left 0
				margin-left 1%
				display inline-block


	li
		width 75%
		max-width 300px
		margin 0.75em auto
		display block
		text-align center

		img
			width 100%
			height auto
			margin 0 auto 0.25em auto
			display block
			border-radius 3px


#contact
	#contact-form
	#contact-info
		width 80%
		margin 0 auto

	#contact-form
		margin 1em auto 3em

		input
		textarea
			font-size 1em
			padding-left 0.25em
			padding-right 0.25em
			-border-radius(0.1em)
			border 2px solid #F0F0F0

			&[type="email"]
			&[type="text"]
				width 100%
				height 2em

			&[type="submit"]
				width 6.25rem
				background gray
				color black
				border none
				padding 0.5em 0.2em 0.4em 0.2em
				font-size 1.1em
				text-align center
				font-weight 300
				margin 0 auto
				display block
				cursor pointer
				-transition(all 0.2s)

				&:hover
				&:active
					background black
					color white

		textarea
			width 100%
			padding 0.25em

	#contact-info
		text-align center

		img
			max-width 100%
			margin-bottom 1em


.full-bg
	width 100%
	height 100vh
	background-size cover
	background-position center top
	background-repeat no-repeat

	.full-bg-caption
		width 100%
		background rgba( 255, 255, 255, 0.75 )
		padding 1em 0
		font-size 2em
		color black
		text-align center
		position absolute
		bottom 0

		.download-res
			color (@color)


/* ==========================================================================
	Media Queries
   ========================================================================== */

@media screen and (min-width 40em)
	#top
		#masthead
			.header-content
				width 40%
				min-width 27em
				height 100%
				padding-top 1em
				padding-bottom 3em
				position absolute
				top 0
				left 3%
				transform(none)

				#front-page-title
					font-size 3.7em

		#bio
			width 45%
			position absolute
			bottom 0
			left 3%
			padding 1em
			text-align justify
			border-radius(3px)

	#news
		.news-list
			min-height 31em
			text-align justify

			&:after
				width 100%
				display inline-block
				content ""

			.news-item
				width 30%
				display inline-block
				vertical-align top

		.pagination
			position absolute
			top 50%
			-transform(translateY(-50%))

			.nav-links
				.page-numbers
					position absolute
					top 50%
					-transform(translateY(-50%))
					font-size 5em

					&.next
						right 0
						margin-right 0.5%
						display inline-block

					&.prev
						left 0
						margin-left 0.5%
						display inline-block

	#contact
		.section-content
			margin 2em auto

			@extends .clearfix

			#contact-form
				width 60%
				float left

			#contact-info
				width 35%
				float right
				margin-top 3em


	.full-bg
		figcaption
			font-size 2em


/* ==========================================================================
	EXTRAS
   ========================================================================== */

.current-page
	visibility hidden
	position absolute
	bottom 0
	right 0
